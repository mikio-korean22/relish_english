<div class = "container">
    <div class = "row">
        <div class = "col-sm-8 beginner_question">
            <h2>初級問題　一覧</h2>
            <% @quizzes.each do |quiz| %>
                <ul>
                    <li><%= link_to quiz.content, beginner_path(quiz.id), class: "beginner_question_list" %></li>
                </ul>
            <% end %>
        </div>
        <div class = "col-sm-4">
            <%= render 'layouts/asidebar' %>
        </div>
    </div>
</div>